<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="org.zimgo.aliensvshumans.Controllers.SettingDialogController">
    <children>
        <StackPane>
            <ImageView fx:id="backgroundImageView" opacity="0.39">
                <image>
                    <Image url="@../imageResources/mainBackground.jpg" />
                </image>
            </ImageView>
        </StackPane>
        <Button fx:id="exitButton" layoutX="180" layoutY="230.0" mnemonicParsing="false" onAction="#exit" text="Back" />
        <Button fx:id="backgroundMusicControl" layoutX="50" layoutY="20.0" mnemonicParsing="false" onAction="#backgroundMusicControl" text="Toggle off background music" />
        <Button fx:id="clickSoundControl" layoutX="50" layoutY="60.0" mnemonicParsing="false" onAction="#clickMusicControl" text="Toggle off click sound" />
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.zimgo.aliensvshumans.Controllers.InGameController"
            prefHeight="400.0" prefWidth="600.0">

    <children>


        <StackPane xmlns:fx="http://javafx.com/fxml/1">
            <ImageView fx:id="backgroundImageView" fitHeight="600" fitWidth="600" opacity="0.39">
                <image>
                    <Image url="@../imageResources/MainGame.jpg" />
                </image>
            </ImageView>
            <Rectangle fill="black" height="600" opacity="0.3" width="600" />

            <VBox alignment="TOP_CENTER" prefHeight="400" prefWidth="400" spacing="0" xmlns:fx="http://javafx.com/fxml/1">

                <Text fx:id="dialogHolder" styleClass="main-text" text="" wrappingWidth="550">
                    <VBox.margin>
                        <Insets top="120.0" />
                    </VBox.margin>
                </Text>

            </VBox>
        </StackPane>

        <Button fx:id="startGame" layoutX="360" layoutY="400.0" mnemonicParsing="false"  prefWidth="100" prefHeight="30" text = "Start"  onAction="#startGame"/>
        <Button fx:id="backToMain" layoutX="370" layoutY="470.0" mnemonicParsing="false"
                prefWidth="200" prefHeight="30" text = "Main Menu" onAction="#setBackToMain" />
        <Button fx:id="fight" layoutX="360" layoutY="400.0" mnemonicParsing="false"  prefWidth="100" prefHeight="30" text = "Fight"  onAction="#fight" visible="false"/>






    </children>

</AnchorPane>
